generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id               Int       @id @default(autoincrement())
  username         String    @unique
  role             Role?     @default(USER)
  password         String
  createOn         DateTime  @map("create_on")
  lastLogin        DateTime? @map("last_login")
  refreshToken     String?   @map("refresh_token")
  refreshExpiresIn DateTime? @map("refresh_expires_in")

  @@map("users")
}

model Sector {
  id          Int       @id @default(autoincrement())
  sectorId    Int       @unique @map("sector_id")
  description String
  Company     Company[]

  @@map("sectors")
}

model Company {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  shortcut    String   @unique
  since       String
  full_name   String
  sectorId    Int      @map("sector_id")
  isin        String   @unique
  treasury    Float // percent
  marketValue Float    @map("market_value") // billion PLN
  updated     DateTime @default(now())
  Sector      Sector   @relation(fields: [sectorId], references: [id])
  Report      Report[]

  @@map("companies")
}

model Report {
  id           Int       @id @default(autoincrement())
  companyId    Int       @map("company_id")
  group        Int // dividends: 0 none, 1 irregular, 2 regular,  3 WIG30 index
  year         Int
  quarter      Int
  date         DateTime
  sharesAmount BigInt    @map("shares_amount")
  price        Float // currency: PLN
  marketValue  Float // billion PLN
  pb           Float // Price-to-book value (P/B)
  pe           Float // Price-earnings relative (P/E)
  ros          Float // Return on (net) Sales (ROS)
  roa          Float // Return on Assets (ROA)
  roe          Float // Return on Equity (ROE)
  zScore       Float?    @map("z_score") // Altman Z"-Score for emerging markets
  nextUpdate   DateTime? @map("next_update") // date of the next report
  Company      Company   @relation(fields: [companyId], references: [id])

  @@map("reports")
}
